}

/**
 * Implements hook_form_alter().
 */
function job_theme_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  $formId = $form['#form_id'];

  if ($formId === 'user_login_form') {
    $form['actions']['submit']['#attributes']['class'] = [
      'btn',
      'btn-dark-green',
      'btn-block',
    ];
  }

  if ($formId === 'user_register_form') {
    $form['actions']['submit']['#attributes']['class'] = [
      'btn',
      'btn-dark-green',
      'btn-block',
    ];
  }
}

