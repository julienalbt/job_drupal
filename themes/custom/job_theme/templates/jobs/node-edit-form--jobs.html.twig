{#
/**
 * @file
 * Theme override for a node edit form.
 *
 * Two column template for the node add/edit form.
 *
 * This template will be used when a node edit form specifies 'node_edit_form'
 * as its #theme callback.  Otherwise, by default, node add/edit forms will be
 * themed by form.html.twig.
 *
 * Available variables:
 * - form: The node add/edit form.
 *
 * @see seven_form_node_form_alter()
 */
#}
<div class="content clearfix job-form mt-5">
  <div class="col-md-12 layout-region layout-region-node-main">
    <div class="container">
      {{ form.title }}
      {{ form.field_junior }}
      {{ form.field_teletravail }}
      {{ form.field_adresse }}

      <div class="accordion" id="descAcc">
        <div class="card">
          <div class="card-header bg-c-blue" id="headingOne">
            <h2 class="mb-0">
              <button class="btn btn-link btn-block text-left btn-job-acc text-light" type="button"
                      data-toggle="collapse" data-target="#desc" aria-expanded="true" aria-controls="desc">
                {{ 'Description et profil'|t }}
              </button>
            </h2>
          </div>

          <div id="desc" class="collapse" aria-labelledby="headingOne" data-parent="#descAcc">
            <div class="card-body">
              {{ form.field_description_job }}
              {{ form.field_profil_recherche }}
            </div>
          </div>
        </div>
      </div>

      <div class="accordion my-4" id="typeContrat">
        <div class="card">
          <div class="card-header bg-c-blue" id="headingTwo">
            <h2 class="mb-0">
              <button class="btn btn-link btn-block text-left btn-job-acc text-light" type="button"
                      data-toggle="collapse" data-target="#type" aria-expanded="true" aria-controls="type">
                {{ 'Type de contrat et exp√©riences'|t }}
              </button>
            </h2>
          </div>

          <div id="type" class="collapse" aria-labelledby="headingTwo" data-parent="#typeContrat">
            <div class="card-body">
              {{ form.field_type_de_contrat }}
              {{ form.field_experience }}
            </div>
          </div>
        </div>
      </div>

      <div class="accordion" id="salaireAvantages">
        <div class="card">
          <div class="card-header bg-c-blue" id="headingThree">
            <h2 class="mb-0">
              <button class="btn btn-link btn-block text-left btn-job-acc text-light" type="button"
                      data-toggle="collapse" data-target="#salaire" aria-expanded="true" aria-controls="salaire">
                {{ 'Salaire et avantages'|t }}
              </button>
            </h2>
          </div>

          <div id="salaire" class="collapse" aria-labelledby="headingThree" data-parent="#salaireAvantages">
            <div class="card-body">
              {{ form.field_salaire }}
              {{ form.field_avantages }}
            </div>
          </div>
        </div>
      </div>


      {{ form|without('advanced', 'field_junior', 'field_teletravail', 'field_skills', 'field_description_job',
        'field_categories', 'field_profil_recherche', 'title', 'field_type_de_contrat',
        'field_experience', 'field_avantages', 'field_salaire', 'field_adresse') }}

    </div>
  </div>
</div>
